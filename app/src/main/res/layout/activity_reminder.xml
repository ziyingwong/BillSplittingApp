<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReminderActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_line_border">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Lee Chia Jee"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_text"
            android:text="Owes you RM15.70"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="25sp"
            android:paddingBottom="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Reminder"
        android:background="@drawable/button_border"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/ll1"
        android:textSize="20sp"
        android:onClick="onSendReminder"
        />

    <TextView
        android:id="@+id/completed_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder Sent"
        android:background="@drawable/border"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/ll1"
        android:textSize="20sp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/ll1"
        android:textSize="20sp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/button_settled_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settle Up"
        android:background="@drawable/button_border"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/ll1"
        android:textSize="20sp"
        android:onClick="onSettledUp"
        />

</RelativeLayout>